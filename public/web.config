<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <!-- URL Rewrite для React Router -->
        <rewrite>
            <rules>
                <!-- Правило для React SPA -->
                <rule name="React Routes" stopProcessing="true">
                    <match url=".*" />
                    <conditions logicalGrouping="MatchAll">
                        <!-- Не применять к существующим файлам -->
                        <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
                        <!-- Не применять к существующим директориям -->
                        <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
                        <!-- Не применять к API запросам -->
                        <add input="{REQUEST_URI}" pattern="^/(api)" negate="true" />
                    </conditions>
                    <!-- Перенаправить на index.html -->
                    <action type="Rewrite" url="/" />
                </rule>
                
                <!-- Правило для обратного прокси к бэкенду (опционально) -->
                <rule name="Backend API Proxy" stopProcessing="true">
                    <match url="^api/(.*)" />
                    <action type="Rewrite" url="http://localhost:3001/api/{R:1}" />
                </rule>
            </rules>
        </rewrite>
        
        <!-- MIME типы для статических файлов -->
        <staticContent>
            <!-- JavaScript -->
            <mimeMap fileExtension=".js" mimeType="application/javascript" />
            <mimeMap fileExtension=".mjs" mimeType="application/javascript" />
            
            <!-- JSON -->
            <mimeMap fileExtension=".json" mimeType="application/json" />
            
            <!-- Шрифты -->
            <mimeMap fileExtension=".woff" mimeType="application/font-woff" />
            <mimeMap fileExtension=".woff2" mimeType="application/font-woff2" />
            <mimeMap fileExtension=".ttf" mimeType="application/font-ttf" />
            <mimeMap fileExtension=".otf" mimeType="application/font-otf" />
            <mimeMap fileExtension=".eot" mimeType="application/vnd.ms-fontobject" />
            
            <!-- SVG -->
            <mimeMap fileExtension=".svg" mimeType="image/svg+xml" />
            
            <!-- Manifest -->
            <mimeMap fileExtension=".webmanifest" mimeType="application/manifest+json" />
        </staticContent>
        
        <!-- HTTP заголовки -->
        <httpProtocol>
            <customHeaders>
                <!-- Безопасность -->
                <add name="X-Content-Type-Options" value="nosniff" />
                <add name="X-Frame-Options" value="DENY" />
                <add name="X-XSS-Protection" value="1; mode=block" />
                <add name="Referrer-Policy" value="strict-origin-when-cross-origin" />
                
                <!-- Кэширование статических ресурсов -->
                <add name="Cache-Control" value="public, max-age=31536000" />
            </customHeaders>
        </httpProtocol>
        
        <!-- Компрессия -->
        <httpCompression>
            <dynamicTypes>
                <add mimeType="text/*" enabled="true" />
                <add mimeType="application/javascript" enabled="true" />
                <add mimeType="application/json" enabled="true" />
                <add mimeType="application/xml" enabled="true" />
            </dynamicTypes>
            <staticTypes>
                <add mimeType="text/*" enabled="true" />
                <add mimeType="application/javascript" enabled="true" />
                <add mimeType="application/json" enabled="true" />
                <add mimeType="application/xml" enabled="true" />
            </staticTypes>
        </httpCompression>
        
        <!-- Настройки по умолчанию -->
        <defaultDocument>
            <files>
                <clear />
                <add value="index.html" />
            </files>
        </defaultDocument>
        
        <!-- Кастомные страницы ошибок (опционально) -->
        <httpErrors errorMode="Custom" existingResponse="Replace">
            <remove statusCode="404" />
            <error statusCode="404" path="/index.html" responseMode="ExecuteURL" />
        </httpErrors>
    </system.webServer>
</configuration>
